{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tactilesql",
  "version": "0.1.0",
  "identifier": "com.gencmurat.tactilesql",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["$DOWNLOAD/**", "$DOCUMENT/**", "$HOME/**", "$APPDATA/**", "**"],
        "deny": []
      }
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "tactilesql",
        "width": 1280,
        "height": 800,
        "decorations": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}