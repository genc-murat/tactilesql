{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tactilesql",
  "version": "0.1.0",
  "identifier": "com.gencmurat.tactilesql",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": [
          "$DOWNLOAD/**",
          "$DOCUMENT/**",
          "$HOME/**",
          "$APPDATA/**",
          "**"
        ],
        "deny": []
      }
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "tactilesql",
        "width": 1280,
        "height": 800,
        "decorations": false,
        "resizable": false,
        "transparent": true,
        "backgroundColor": "#00000000",
        "visible": false,
        "fullscreen": false,
        "shadow": false
      },
      {
        "label": "splashscreen",
        "url": "splashscreen.html",
        "width": 700,
        "height": 400,
        "decorations": false,
        "transparent": true,
        "backgroundColor": "#050505",
        "center": true,
        "resizable": false,
        "alwaysOnTop": true,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob:; connect-src 'self' ipc: tauri: asset: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}